<section class="h-100 h-custom gradient-custom-2">
    <img src="/images/logo-pink.jpg" alt="" style="width:auto; height:100px">

    <div class="container py-1 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-6">
                <div class="card card-registration card-registration-2" style="border-radius: 18px;">
                    <div class="card-body p-0">

                        <div class="row g-0">
                            {{!-- <div class="col-lg-6"> --}}

                                <div class="p-2">

                                    <div class="container ">
                                        <div class="container">
                                            <div class="row ">
                                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 d-flex justify-content-center">
                                                    <form action="/signup" method="post" role="form"
                                                        enctype="application/x-www-form-urlencoded" id="signup-form">
                                                        <legend>Enter Registration Information Here</legend>

                                                        <div class="form-group pb-2">
                                                            
                                                            <input type="text" class="form-control" name="name"
                                                                id="first_name" placeholder="Name" required>
                                                        </div>

                                                        <div class="form-group pb-2">
                                                           
                                                            <input type="text" class="form-control" name="address"
                                                                id="last_name" placeholder="Address" required>
                                                        </div>
                                                        <div class="form-group pb-2">
                                                            
                                                            <input type="text" class="form-control" name="phonenumber"
                                                                id="last_name" placeholder="Phone Number" required>
                                                        </div>

                                                        <div class="form-group pb-2">
                                                            
                                                            <input type="text" class="form-control" name="email"
                                                                id="email" placeholder="Email Address" required>
                                                        </div>
                                                        <div>
                                                            <p style="color: red">{{signUpError}}</p>
                                                        </div>

                                                        <div class="form-group pb-2">
                                                            
                                                            <input type="password" class="form-control" placeholder="Password" name="password"
                                                                id="pw" required>
                                                        </div>

                                                        <div class="form-group pb-2">
                                                            
                                                            <input type="password" class="form-control" placeholder="confirm password"name="repw"
                                                                id="pw_confirm" required>
                                                        </div>

                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
