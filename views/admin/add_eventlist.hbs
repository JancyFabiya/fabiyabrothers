<p>Welcome to {{title}}</p> --}}
<section class="h-100 h-custom gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-8">
        <div class="card card-registration card-registration-2" style="border-radius: 18px;">
          <div class="card-body p-0">
            <div class="row g-0">
              {{!-- <div class="col-lg-6"> --}}
                <div class="p-2">
                  <div class="row mb-1">
                    <div class="col d-flex justify-content-center">
                      <div class="row col-lg-3 ">
                        <h3 class="fw-normal justify-content-center align-items-center mb-1" style="color: #f9f9fc;">Add
                          Events</h3>
                      </div>
                    </div>
                  </div>
                  <div class="container mt-2 ">
                    <form action="/admin/addEvent" method="post" enctype="multipart/form-data">
                      <!-- Example single danger button -->
                      <div class="row mb-2">
                        <div class="col d-flex justify-content-center">
                          {{!-- <div class="col d-flex"> --}}
                            <div class="form-outline mb-2 col-lg-2">
                              {{!-- <div class=" mb-3"> --}}
                                <label class="form-label pt-2" for="form3Examplev2">Event Type:</label>
                              </div>
                              <div class="form-outline mb-2 col-lg-4">
                                <select name="eventtype" class="form-control">
                                  {{#each eventtype}}
                                  <option value="{{this.eventtype}}">{{this.eventtype}}</option>
                                  {{/each}}
                                </select>
                                {{!--
                              </div> --}}
                            </div>
                          </div>
                        </div>
                        <!-- Email input -->
                        {{!-- <div class="col-xs-4"> --}}
                          <div class="row mb-2">
                            <div class="col d-flex justify-content-center">
                              {{!-- <div class="col d-flex"> --}}
                                <div class="form-outline mb-2 col-lg-2">
                                  <label class="form-label pt-2" for="form3Examplev2">Event name :</label>
                                </div>
                                <div class="form-outline mb-2 col-lg-4">
                                  <select name="eventname" class="form-control">
                                    {{#each eventname}}
                                    <option value="{{this.eventname}}">{{this.eventname}}</option>
                                    {{/each}}
                                  </select>
                                </div>
                              </div>
                            </div>

                            <!-- Password input -->
                            <div class="row mb-2">
                              <div class="col d-flex justify-content-center">
                                <div class="form-outline mb-2 col-lg-2">
                                  <label class="form-label pt-2" for="form3Examplev2">Description :</label>
                                </div>
                                <div class="form-outline mb-2 col-lg-4">
                                  <input type="text" name="description" id="form2Example2" class="form-control" />
                                  {{!-- <label class="form-label" for="form2Example2">Password</label> --}}
                                </div>
                              </div>
                            </div>

                            <div class="row mb-2">
                              <div class="col d-flex justify-content-center">
                                <div class="form-outline mb-2 col-lg-6">
                                  <label class="form-label" for="form3Examplev2">Image</label>
                                  <input class="form-control" name="image" type="file" id="formFile">
                                </div>
                                <div class="form-group">
                                </div>
                              </div>
                            </div>

                            <div class="row mb-2">
                              <div class="col d-flex justify-content-center">
                                <div class="form-outline mb-2 col-lg-2">
                                  <label class="form-label pt-2" for="form3Examplev2">Amount :</label>
                                </div>
                                <div class="form-outline mb-2 col-lg-4">
                                  <input type="text" name="amount" id="form2Example2" class="form-control" />
                                  {{!-- <label class="form-label" for="form2Example2">Password</label> --}}
                                </div>
                              </div>
                            </div>
                            <!-- Submit button -->
                            <div class="row mb-2">
                              <div class="col d-flex justify-content-center">
                                <div class="row col-lg-3 ">
                                  <button type="submit" class="btn btn-primary btn-block mb-2 ">Add</button>

                                </div>
                              </div>
                            </div>
                    </form>
                  </div>

                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>

</section>