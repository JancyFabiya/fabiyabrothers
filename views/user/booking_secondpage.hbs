                                </option>


                                {{/each}}

                                {{/each}}
                            </select>



                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group align">
                                    <label class="form text-light " for="form2Example18">Total Payment</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" id="readOnlyInput" type="text" name="total"
                                        value="{{Total}}" readonly="">

                                    {{!-- <input class="form-control" type="text" name="total" value="{{Total}}"> --}}
