    <div class="section-center">
        <div class="container">
            <div class="row">
                <div class="booking-form">
                    <div class="form-header">
                        <h1>Make your Booking</h1>
                    </div>

                    <form action="/booking-second" method="post">
                        <div class="form-group">
                            <a href="/food_view" class="btn btn-outline-danger ">Choose your food items</a>

                        </div>
                        
                        <div class="form-group">

                            <select multiple="" class="form-select" id="exampleSelect2" name="food">
                                {{#each selectedFood}}

                                {{#each this.fooditem}}

                                <option>
                                    {{this.foodname}}
